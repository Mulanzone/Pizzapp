{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://littletabletsrxco.local/schema/mixers.schema.json",
  "title": "Mixer Registry Schema",
  "type": "object",
  "required": ["schema_version", "mixers"],
  "additionalProperties": false,
  "properties": {
    "schema_version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "mixers": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/$defs/mixer" }
    }
  },
  "$defs": {
    "id": {
      "type": "string",
      "minLength": 3,
      "maxLength": 80,
      "pattern": "^[a-z0-9]+(?:[a-z0-9_\\-]*[a-z0-9]+)?$"
    },
    "markdownArray": {
      "type": "array",
      "items": { "type": "string" },
      "default": []
    },
    "rangeNumber": {
      "description": "A numeric range [min,max]. Must be ordered.",
      "type": "array",
      "minItems": 2,
      "maxItems": 2,
      "items": { "type": "number" }
    },
    "rangeC": {
      "description": "Temperature delta range in °C [min,max].",
      "allOf": [
        { "$ref": "#/$defs/rangeNumber" },
        {
          "items": {
            "type": "number",
            "minimum": -10,
            "maximum": 30
          }
        }
      ]
    },
    "calibration": {
      "description": "Optional real-world learning data.",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "last_updated": {
          "anyOf": [
            { "type": "null" },
            { "type": "string", "format": "date-time" }
          ],
          "default": null
        },
        "measured_heat_gain_c": {
          "anyOf": [
            { "type": "null" },
            { "type": "number", "minimum": -10, "maximum": 30 }
          ],
          "default": null
        },
        "notes": { "type": "string", "default": "" }
      }
    },
    "mixer": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "display_name", "mixer_class", "friction_factor_c_range"],
      "properties": {
        "id": { "$ref": "#/$defs/id" },
        "display_name": { "type": "string", "minLength": 2, "maxLength": 120 },
        "mixer_class": {
          "type": "string",
          "enum": ["hand", "planetary", "spiral", "fork", "dive_arm", "other"]
        },
        "friction_factor_c_range": { "$ref": "#/$defs/rangeC" },
        "notes_md": { "$ref": "#/$defs/markdownArray" },
        "calibration": { "$ref": "#/$defs/calibration" }
      }
    }
  }
}